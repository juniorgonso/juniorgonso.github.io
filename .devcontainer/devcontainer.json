{
  "name": "Dev Container (Ubuntu + Node + Python + Gemini API)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "git": "latest",
    "node": "lts",
    "python": {
      "version": "3.11",
      "installTools": true
    }
  },

  "postCreateCommand": "pip install google-generativeai python-dotenv && echo 'DependÃªncias do Gemini instaladas!'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "GitHub.copilot-chat",
        "GoogleCloudTools.cloudcode",
        "ritwickdey.LiveServer",
        "mhutchie.git-graph",
        "formulahendry.code-runner"
      ],
      "settings": {
        "python.analysis.extraPaths": ["./"],
        "python.formatting.provider": "black",
        "google.generativeAI.apiKey": "${localEnv:GEMINI_API_KEY}" // Mantido!
      }
    }
  },

  "runArgs": ["-v", "${localWorkspaceFolder}/.env:/workspace/.env"]
}
